<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:background="@drawable/border_round_white" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Resposta"
            android:textSize="@dimen/tex_size_xxlarge"
            android:fontFamily="sans-serif-thin"
            android:layout_margin="@dimen/dim_10"
            android:textStyle="bold"
            android:textColor="@color/black_overlay" />

        <EditText
            android:id="@+id/txt_resposta"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:gravity="top"
            android:textSize="@dimen/tex_size_large"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:background="@drawable/borda_caixa_gray"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:layout_marginBottom="@dimen/dim_10"
            android:padding="@dimen/dim_5"
            android:layout_below="@+id/textView3" />

        <CheckBox
            android:id="@+id/chk_anonimo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Anonimo"
            android:textSize="@dimen/tex_size_large"
            android:fontFamily="sans-serif-thin"
            android:checked="false"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_marginRight="@dimen/dim_5"
            android:layout_below="@+id/txt_resposta"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/btn_cancelar"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_40"
            android:text="Cancelar"
            android:clickable="true"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/tex_size_xlarge"
            android:background="@drawable/long_click_effect_white"
            android:layout_alignTop="@+id/btn_responder"
            android:layout_toStartOf="@+id/btn_responder"
            android:gravity="center"/>

        <TextView
            android:id="@+id/btn_responder"
            android:layout_width="@dimen/dim_120"
            android:layout_height="@dimen/dim_40"
            android:text="Responder"
            android:clickable="true"
            android:textColor="@color/black_overlay"
            android:textSize="@dimen/tex_size_xlarge"
            android:background="@drawable/long_click_effect_white"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>