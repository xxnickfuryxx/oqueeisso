<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <RelativeLayout android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_150"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dim_5"
        android:layout_marginLeft="@dimen/dim_5"
        android:layout_marginRight="@dimen/dim_5"
        android:background="@drawable/long_click_effect_border_gray"
        >

        <ImageView
            android:layout_width="@dimen/dim_150"
            android:layout_height="match_parent"
            android:id="@+id/img_resource"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/dim_5"
            android:src="@drawable/oqueeisso_logo_peq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_50"
            android:text="Duvida 1"
            android:id="@+id/txt_duvida"
            android:layout_alignTop="@+id/img_resource"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/img_resource"
            android:textColor="@color/black_overlay"
            android:textStyle="bold"
            android:textSize="@dimen/tex_size_xlarge"
            android:fontFamily="sans-serif-thin"
            android:layout_marginLeft="@dimen/dim_5"
            android:layout_marginRight="@dimen/dim_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_40"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fulano de Tal"
            android:id="@+id/txt_usuario"
            android:layout_below="@+id/txt_duvida"
            android:layout_alignStart="@+id/txt_duvida"
            android:layout_alignEnd="@+id/txt_duvida"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-thin"
            android:textStyle="normal"
            android:textSize="@dimen/tex_size_xlarge"
            android:gravity="center_vertical|right"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dim_30"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="29/07/2015 11:27"
            android:id="@+id/txt_date_duvida"
            android:layout_alignBottom="@+id/img_resource"
            android:layout_alignStart="@+id/txt_usuario"
            android:layout_alignEnd="@+id/txt_usuario"
            android:textColor="@android:color/black"
            android:fontFamily="sans-serif-thin"
            android:textStyle="normal"
            android:textSize="@dimen/tex_size_large"
            android:gravity="center_vertical|right" />
    </RelativeLayout>
    <View
        android:id="@+id/root_sombra"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_3"
        android:background="@drawable/shadow_bottom"
        android:layout_marginLeft="@dimen/dim_10"
        android:layout_marginRight="@dimen/dim_10"
        android:alpha="0.5"/>
</LinearLayout>