<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dim_10"
        android:orientation="vertical"
        android:gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seus dados estarão preservados"
            android:id="@+id/textView5"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/tex_size_xxxxlarge"
            android:layout_marginBottom="@dimen/dim_10"
            android:textStyle="normal"
            android:textColor="@color/yellow"
            android:gravity="center"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Por que precisamos dos seus dados?"
            android:id="@+id/textView7"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/tex_size_xxxlarge"
            android:layout_marginBottom="@dimen/dim_10"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - Para que você crie dúvidas."
            android:id="@+id/textView9"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/tex_size_xlarge"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - Para que você seja avisado quando sua dúvida for respondida."
            android:id="@+id/textView8"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/tex_size_xlarge"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="left"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" - Para que seu nome apareça quando você responder alguma dúvida."
            android:id="@+id/textView10"
            android:fontFamily="sans-serif-thin"
            android:textSize="@dimen/tex_size_xlarge"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginRight="@dimen/dim_10"
            android:textStyle="normal"
            android:textColor="@color/white"
            android:gravity="left"/>








    </LinearLayout>


</RelativeLayout>